<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.memoryaid">

    <!-- ✅ NFC permissions -->
    <uses-permission android:name="android.permission.NFC" />
    <uses-feature android:name="android.hardware.nfc" android:required="true" />

    <application
        android:allowBackup="true"
        android:label="MemoryAid"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MemoryAid">

        <activity android:name=".VideoPlayerActivity" android:exported="false" />
        <activity android:name=".EditMemoryActivity" android:exported="false" />

        <!-- ✅ NFC-discoverable activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Activity for adding memory -->
        <activity android:name=".AddMemoryActivity" android:exported="false" />
    </application>

</manifest>
